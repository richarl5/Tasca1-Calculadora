<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_llista_operacions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.upc.eetac.dsa.calculadora.LlistaOperacions">

    <TextView
        android:text="Historial d'operacions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textStyle="normal|bold"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

    <Button
        android:text="Esborrar historial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEsb"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView1" />

    <Button
        android:text="X"
        android:layout_height="wrap_content"
        android:id="@+id/buttonX"
        android:layout_width="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="finish" />

    <ListView
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonX"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:background="#BBDF"
        android:id="@+id/llista" />

</RelativeLayout>
